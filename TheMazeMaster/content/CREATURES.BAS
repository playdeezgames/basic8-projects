CREATURE_ALIVE=LIST()
CREATURE_MAZE_COLUMN=LIST()
CREATURE_MAZE_ROW=LIST()
CREATURE_ROOM_COLUMN=LIST()
CREATURE_ROOM_ROW=LIST()
CREATURE_TYPE=LIST()
DEF CREATE_CREATURE(T,MX,MY,X,Y)
    I=LEN(CREATURE_ALIVE)
    PUSH(CREATURE_ALIVE,TRUE)
    PUSH(CREATURE_TYPE,CREATURETYPE_DUDE)
    PUSH(CREATURE_MAZE_COLUMN,MX)
    PUSH(CREATURE_MAZE_ROW,MY)
    PUSH(CREATURE_ROOM_COLUMN,X)
    PUSH(CREATURE_ROOM_ROW,Y)
    RETURN I
ENDDEF
DEF DRAW_CREATURES(MX,MY)
    FOR I=0 TO LEN(CREATURE_ALIVE)-1
        IF CREATURE_ALIVE(I) AND CREATURE_MAZE_COLUMN(I)=MX AND CREATURE_MAZE_ROW(I)=MY THEN
            T=CREATURE_TYPE(I)
            S=GET_CREATURETYPE_SPRITE_INDEX(T)
            SPR CREATURE_SPRITES(S),ROOM_CELL_WIDTH*CREATURE_ROOM_COLUMN(I),ROOM_CELL_HEIGHT*CREATURE_ROOM_ROW(I)
        ENDIF
    NEXT I
ENDDEF
