CREATURETYPE_DUDE="DUDE"
CREATURETYPE_RAT="RAT"
ALL_CREATURETYPES = LIST(CREATURETYPE_DUDE)
DEF GET_CREATURETYPE_TILE_INDEX(CT)
    IF CT=CREATURETYPE_DUDE THEN
        RETURN TILE_DUDE
    ELSEIF CT=CREATURETYPE_RAT
        RETURN TILE_RAT
    ELSE
        RAISE("INVALID CREATURETYPE: "+CT)
    ENDIF
ENDDEF
DEF GET_CREATURETYPE_MINIMUM_EXIT_COUNT(CT)
    IF CT=CREATURETYPE_DUDE THEN
        RETURN 2
    ELSEIF CT=CREATURETYPE_RAT THEN
        RETURN 1
    ELSE
        RAISE("INVALID CREATURETYPE: "+CT)
    ENDIF
ENDDEF
DEF GET_CREATURETYPE_MAXIMUM_EXIT_COUNT(CT)
    IF CT=CREATURETYPE_DUDE THEN
        RETURN 4
    ELSEIF CT=CREATURETYPE_RAT THEN
        RETURN 4
    ELSE
        RAISE("INVALID CREATURETYPE: "+CT)
    ENDIF
ENDDEF
DEF GET_CREATURETYPE_SPAWN_COUNT(CT)
    IF CT=CREATURETYPE_DUDE THEN
        RETURN 1
    ELSEIF CT=CREATURETYPE_RAT THEN
        RETURN 64
    ELSE
        RAISE("INVALID CREATURETYPE: "+CT)
    ENDIF
ENDDEF
